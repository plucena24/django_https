# Default server configuration
#

server {
       listen         80;
       listen         [::]:80;
       server_name    www.jeremiahcornsticks.com jeremiahcornsticks.com;
       return         301 https://$server_name$request_uri;
}

server {
       listen         443;
       ssl            on;
       server_name    jeremiahcornsticks.com;
       ssl_certificate /home/NAThompson/django_https/lib/python3.4/site-packages/sslserver/certs/development.crt;
       ssl_certificate_key /home/NAThompson/django_https/lib/python3.4/site-packages/sslserver/certs/development.key;
       location / {
             proxy_pass https://127.0.0.1:8000;
             proxy_set_header Host $host;
             proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
       }
}



